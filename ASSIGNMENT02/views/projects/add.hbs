<section class="add-record">
  <h1 class="text-center title">{{title}}</h1>
  <div class="form-container">
    <form method="POST" enctype="multipart/form-data">
      <fieldset class="form-group">
        <label for="country">Country</label>
        <input type="text" name="country" id="country" required />
      </fieldset>
      <fieldset class="form-group">
        <label for="city">City</label>
        <input type="text" name="city" id="city" required />
      </fieldset>
      <fieldset class="form-group">
        <label for="dueDate">Visit Date</label>
        <input type="date" name="visitDate" id="visitDate" required />
      </fieldset>
      <fieldset class="form-group">
        <label for="stars">Stars</label>
        <input
          type="number"
          id="stars"
          name="stars"
          min="0"
          max="5"
          step="1"
          required
        />
      </fieldset>
      <fieldset class="form-group">
        <label for="description">Description</label>
        <textarea
          name="description"
          id="description"
          rows="5"
          placeholder="Enter a detailed description"
          required
        ></textarea>
      </fieldset>
      <fieldset class="form-group">
        <label for="image">Upload Image</label>
        <input type="file" name="image" id="image" accept="image/*" />
      </fieldset>
      <fieldset class="form-group">
        <label>Location Preview</label>
        <div id="map" style="height: 300px; border: 1px solid #ccc;"></div>
      </fieldset>

      <button class="btn btn-primary">Save</button>
      <a href="/projects" class="btn btn-warning ms-3">Go Back</a>
    </form>
  </div>
</section>