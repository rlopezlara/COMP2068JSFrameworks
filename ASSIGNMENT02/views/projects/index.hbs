<h1>{{title}}</h1>

{{#if user}}
<a href="/projects/add" class="btn btn-primary mb-4">Add a new place</a>
{{/if}}

<div class="container">
  {{#each dataset}}
  <div class="card mb-5 shadow-lg">
    <div class="row g-0">
      <!-- Image Section -->
      <div class="col-md-5">
        <img src="{{this.imageUrl}}" class="img-fluid rounded-start h-100 object-fit-cover" alt="{{this.city}}, {{this.country}}">
      </div>

      <!-- Content Section -->
      <div class="col-md-7">
        <div class="card-body">
          <h3 class="card-title">{{this.country}} - {{this.city}}</h3>
          <p class="card-text"><strong>Visited on:</strong> {{toShortDate this.visitDate}}</p>
          <p class="card-text"><strong>Rating:</strong> {{this.stars}} ‚≠ê</p>
          <p class="card-text"><strong>About the trip:</strong> {{this.description}}</p>
          
          {{#if ../user}}
          <div class="mt-3">
            <a href="/projects/edit/{{this._id}}" class="btn btn-info me-2">Update</a>
            <a href="/projects/delete/{{this._id}}" class="btn btn-danger" onclick="return confirmDelete()">Delete</a>
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
